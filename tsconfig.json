{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@enums/*": ["./src/enums/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
